{
  "version": 2,
  "builds": [
    {
      "src": "*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/app.js",
      "headers": { "Content-Type": "application/javascript; charset=utf-8" },
      "dest": "/app.js"
    },
    {
      "src": "/styles.css",
      "headers": { "Content-Type": "text/css; charset=utf-8" },
      "dest": "/styles.css"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*\\.(html|png|jpg|jpeg|gif|svg|ico|json|txt))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ]
}
